{
  "id": null,
  "uid": "helios-performance", 
  "title": "02 - Helios Performance & System",
  "tags": ["helios", "performance", "system"],
  "editable": true,
  "graphTooltip": 0,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "System Resources",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "collapsed": false
    },
    {
      "id": 2,
      "title": "CPU Usage",
      "type": "timeseries",
      "targets": [{"expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)", "legendFormat": "CPU Usage %", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2, "fillOpacity": 30},
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 1}
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        {"expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100", "legendFormat": "Memory Usage %", "refId": "A"},
        {"expr": "go_memstats_heap_inuse_bytes / 1024 / 1024", "legendFormat": "Go Heap MB", "refId": "B"}
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2},
          "unit": "percent"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 1}
    },
    {
      "id": 4,
      "title": "Disk I/O",
      "type": "timeseries",
      "targets": [
        {"expr": "rate(node_disk_read_bytes_total[5m]) / 1024 / 1024", "legendFormat": "Read MB/s", "refId": "A"},
        {"expr": "rate(node_disk_written_bytes_total[5m]) / 1024 / 1024", "legendFormat": "Write MB/s", "refId": "B"}
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2},
          "unit": "MBs"
        }
      },
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 1}
    },
    {
      "id": 5,
      "title": "Blockchain Performance",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
      "collapsed": false
    },
    {
      "id": 6,
      "title": "Block Time",
      "type": "timeseries",
      "targets": [{"expr": "rate(cometbft_consensus_block_interval_seconds_sum[5m]) / rate(cometbft_consensus_block_interval_seconds_count[5m])", "legendFormat": "{{instance}}", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2},
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
    },
    {
      "id": 7,
      "title": "Consensus Rounds",
      "type": "timeseries",
      "targets": [{"expr": "cometbft_consensus_rounds", "legendFormat": "{{instance}}", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
    },
    {
      "id": 8,
      "title": "Network Metrics",
      "type": "row",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
      "collapsed": false
    },
    {
      "id": 9,
      "title": "P2P Message Rate",
      "type": "timeseries",
      "targets": [{"expr": "rate(cometbft_p2p_message_send_bytes_total[5m])", "legendFormat": "Send {{instance}}", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2},
          "unit": "Bps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 19}
    },
    {
      "id": 10,
      "title": "Goroutines",
      "type": "timeseries",
      "targets": [{"expr": "go_goroutines", "legendFormat": "{{instance}}", "refId": "A"}],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "custom": {"drawStyle": "line", "lineWidth": 2},
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 19}
    }
  ],
